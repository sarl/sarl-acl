package io.sarl.acl.protocol.request

import io.sarl.acl.message.AclMessage
import io.sarl.acl.message.Performative
import io.sarl.acl.protocol.ProtocolResult
import io.sarl.acl.protocol.ProtocolState
import java.text.MessageFormat

/** 
 * Participant side for the Request interaction protocol.
 *
 * <center><img src="./doc-files/sequence.png"></center>
 * 
 * @author $Author: sgalland$
 * @author $Author: ngaud$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 * @see <a href="http://www.fipa.org/specs/fipa00026/SC00026H.html">FIPA Request Interaction Protocol Specification</a>
 */
behavior ParticipantFipaRequestProtocol extends FipaRequestProtocol {

	var requestData : ProtocolResult

	final override isInitiatorSide : boolean {
		false
	}

	final override isParticipantSide : boolean {
		true
	}

	/**
	 * At any point in the IP, the receiver of a communication 
	 * can inform the sender that it did not understand what was communicated.
	 * 
	 * The communication of a not-understood within an interaction protocol may terminate the entire IP 
	 * and termination of the interaction may imply that any commitments made during the interaction 
	 * are null and void.
	 * 
	 * @param reason the reason of the cancel.
	 */
	def notUnderstood(reason : Object = null) {
		notUnderstoodProtocol(reason)
	}

	/** Replies the request.
	 */
	@SuppressWarnings("potential_field_synchronization_problem")
	def getRequest : ProtocolResult {
		val rlock = this.lock.readLock
		rlock.lock
		try {
			if (this.numberOfErrors === 0) {
				return this.requestData
			}
		} finally {
			rlock.unlock
		}
		reportError(Messages::ParticipantFipaRequestProtocol_0)
		return null
	}

	/** Refuse a request.
	 *
	 * @param reason the reason to refuse
	 */
	def refuse(reason : Object = null) {
		val rlock = this.lock.readLock
		rlock.lock
		var st : ProtocolState
		try {
			st = this.state
		} finally {
			rlock.unlock
		}
		if (st == RequestProtocolState::WAITING_PARTICIPANT_DECISION) {
			val wlock = this.lock.writeLock
			wlock.lock
			try {
				st = this.state
				if (st == RequestProtocolState::WAITING_PARTICIPANT_DECISION) {
					RequestProtocolState::PARTICIPANT_REFUSED.finish(null)
					sendMessage(reason, Performative::REFUSE, this.initiator)
				} else {
					reportError(MessageFormat::format(Messages::ParticipantFipaRequestProtocol_1, state.name))			
				}
			} finally {
				wlock.unlock
			}
		} else {
			reportError(MessageFormat::format(Messages::ParticipantFipaRequestProtocol_1, state.name))			
		}
	}

	/** Accept a request, and start to do the associated job.
	 * 
	 * @param agreementInformation any useful agreement information to provide to the initiator.
	 */
	def agree(agreementInformation : Object = null) {
		val rlock = this.lock.readLock
		rlock.lock
		var st : ProtocolState
		try {
			st = this.state
		} finally {
			rlock.unlock
		}
		if (st == RequestProtocolState::WAITING_PARTICIPANT_DECISION) {
			val wlock = this.lock.writeLock
			wlock.lock
			try {
				st = this.state
				if (st == RequestProtocolState::WAITING_PARTICIPANT_DECISION) {
					RequestProtocolState::PARTICIPANT_AGREED.change(null)
					sendMessage(agreementInformation, Performative::AGREE, this.initiator)
				} else {
					reportError(MessageFormat::format(Messages::ParticipantFipaRequestProtocol_2, state.name))			
				}
			} finally {
				wlock.unlock
			}
		} else {
			reportError(MessageFormat::format(Messages::ParticipantFipaRequestProtocol_2, state.name))			
		}
	}

	/** Indicates that a failure occurred during the request treatment.
	 * 
	 * @param reason the reason of the failure.
	 */
	@SuppressWarnings("potential_field_synchronization_problem")
	def failure(reason : Object = null) {
		val rlock = this.lock.readLock
		rlock.lock
		var st : ProtocolState
		try {
			st = this.state
		} finally {
			rlock.unlock
		}
		if (st == RequestProtocolState::PARTICIPANT_AGREED) {
			val wlock = this.lock.writeLock
			wlock.lock
			try {
				st = this.state
				if (st == RequestProtocolState::PARTICIPANT_AGREED) {
					this.requestData = null
					RequestProtocolState::PARTICIPANT_FAILURE.finish(null)
					sendMessage(reason, Performative::FAILURE, this.initiator)
				} else {
					reportError(MessageFormat::format(Messages::ParticipantFipaRequestProtocol_3, state.name))			
				}
			} finally {
				wlock.unlock
			}
		} else {
			reportError(MessageFormat::format(Messages::ParticipantFipaRequestProtocol_3, state.name))			
		}
	}

	/** Indicates that a request treatment is finished.
	 * 
	 * @param result the result of the request.
	 */
	@SuppressWarnings("potential_field_synchronization_problem")
	def done(result : Object = null) {
		val rlock = this.lock.readLock
		rlock.lock
		var st : ProtocolState
		try {
			st = this.state
		} finally {
			rlock.unlock
		}
		if (st == RequestProtocolState::PARTICIPANT_AGREED) {
			val wlock = this.lock.writeLock
			wlock.lock
			try {
				st = this.state
				if (st == RequestProtocolState::PARTICIPANT_AGREED) {
					this.requestData = null
					(if (result === null) RequestProtocolState::DONE_WITHOUT_RESULT
						else RequestProtocolState::DONE_WITH_RESULT).finish(null)
					sendMessage(result, Performative::INFORM, this.initiator)
				} else {
					reportError(MessageFormat::format(Messages::ParticipantFipaRequestProtocol_4, state.name))			
				}
			} finally {
				wlock.unlock
			}
		} else {
			reportError(MessageFormat::format(Messages::ParticipantFipaRequestProtocol_4, state.name))			
		}
	}

	@SuppressWarnings("potential_field_synchronization_problem", "discouraged_occurrence_readonly_use")
	on AclMessage [!hasFailed] {
		switch (occurrence.performative) {
			case Performative::REQUEST: {
				val data = getRequest
				if (data === null) {
					val wlock = this.lock.writeLock
					wlock.lock
					try {
						this.requestData = new ProtocolResult(occurrence.sender, Performative::REQUEST, occurrence.content.content)
						this.conversationId = occurrence.conversationId
						this.initiator = occurrence.sender
						RequestProtocolState::WAITING_PARTICIPANT_DECISION.change(new RequestReceived(this))
						startTimeoutNotifier
					} finally {
						wlock.unlock
					}
				} else {
					reportError(Messages::ParticipantFipaRequestProtocol_5)
				}
			}
			default: {
				occurrence.performative.reportUnpexectedPerformativeError
			}
		}
	}

}
