package io.sarl.acl.manager

import io.sarl.acl.protocol.AclProtocol
import java.util.EventListener

/** 
 * Listener on the ACL conversation manager.
 * 
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 * @since 0.12
 */
interface ConversationListener extends EventListener {

	/** A conversation was added to the manager.
	 *
	 * @param conversation is the added conversation.
	 */
	def conversationAdded(conversation : AclProtocol)

	/** A conversation was removed the manager.
	 *
	 * @param conversation is the removed conversation.
	 */
	def conversationRemoved(conversation : AclProtocol)

}
